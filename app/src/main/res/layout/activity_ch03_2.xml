<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joker.test.androidexamples.MainActivity">

    <com.joker.test.androidexamples.ch03.Ch03_2View
        android:id="@+id/view1"
        android:background="@color/colorPrimary"
        android:layout_width="300dp" android:layout_height="00dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toTopOf="@+id/activity_main"/>

    <com.joker.test.androidexamples.ch03.Ch03_2View
        android:id="@+id/view2"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:layout_width="0dp" android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintRight_toRightOf="@id/activity_main"
        app:layout_constraintStart_toStartOf="@id/activity_main"
        app:layout_constraintEnd_toEndOf="@id/activity_main"
        app:layout_constraintTop_toBottomOf="@+id/view1"/>

    <com.joker.test.androidexamples.ch03.Ch03_2View
        android:id="@+id/view3"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toBottomOf="@+id/view2"/>

</android.support.constraint.ConstraintLayout>
