<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joker.test.androidexamples.MainActivity">

    <com.joker.test.androidexamples.ch05.Ch05_2_1DragView
        android:text="layout()"
        android:textColor="@android:color/white"
        android:id="@+id/view1"
        android:background="@color/colorPrimary"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <com.joker.test.androidexamples.ch05.Ch05_2_2DragView
        android:text="offsetXXXAndXXX()"
        android:textColor="@android:color/white"
        android:id="@+id/view2"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        android:background="@color/colorPrimary"
        android:layout_width="100dp"
        android:layout_height="100dp"/>


    <LinearLayout
        app:layout_constraintBottom_toBottomOf="@+id/activity_main"
        app:layout_constraintLeft_toLeftOf="@id/activity_main"
        app:layout_constraintRight_toRightOf="@id/activity_main"
        app:layout_constraintStart_toStartOf="@id/activity_main"
        app:layout_constraintEnd_toEndOf="@id/activity_main"
        android:layout_width="0dp" android:layout_height="200dp">

        <com.joker.test.androidexamples.ch05.Ch05_2_3DragView
            android:text="setLayoutParam()"
            android:textColor="@android:color/white"
            android:id="@+id/view3"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            android:background="@color/colorPrimary"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

    </LinearLayout>


    <com.joker.test.androidexamples.ch05.Ch05_2_4DragView
        android:text="getParent().scrollby()"
        android:textColor="@android:color/white"
        android:id="@+id/view4"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        app:layout_constraintTop_toTopOf="@id/activity_main"
        android:background="@color/colorPrimary"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

</android.support.constraint.ConstraintLayout>
