<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joker.test.androidexamples.MainActivity">

    <ImageView
        android:id="@+id/bitmapImg"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="@id/activity_main"
        app:layout_constraintRight_toRightOf="@id/activity_main"
        android:layout_width="100dp" android:layout_height="100dp"/>

    <SeekBar
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/bitmapImg"
        android:id="@+id/seekHue"
        android:max="100"
        android:progress="50"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <SeekBar
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/seekHue"
        android:id="@+id/seekSaturation"
        android:max="100"
        android:progress="50"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <SeekBar
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/seekSaturation"
        android:id="@+id/seekLum"
        android:max="100"
        android:progress="50"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>
