<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joker.test.androidexamples.MainActivity">

    <com.joker.test.androidexamples.ch06.Ch06_7XfermodeView
        android:id="@+id/view1"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        app:layout_constraintLeft_toRightOf="@+id/view1"
        android:text="xfermode: dest_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.joker.test.androidexamples.ch06.Ch06_7XfermodeView
        app:layout_constraintTop_toBottomOf="@+id/view1"
        android:id="@+id/view2"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        app:layout_constraintLeft_toRightOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        android:text="xfermode: src_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.joker.test.androidexamples.ch06.Ch06_7XfermodeView
        app:layout_constraintTop_toBottomOf="@+id/view2"
        android:id="@+id/view3"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        app:layout_constraintLeft_toRightOf="@+id/view3"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        android:text="xfermode: clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.joker.test.androidexamples.ch06.TestXfermodeView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/activity_main"
        app:layout_constraintEnd_toEndOf="@id/activity_main"
        app:layout_constraintLeft_toLeftOf="@id/activity_main"
        app:layout_constraintRight_toRightOf="@id/activity_main"
        app:layout_constraintTop_toBottomOf="@id/view1"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main"/>

</android.support.constraint.ConstraintLayout>
