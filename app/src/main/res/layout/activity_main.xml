<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joker.test.androidexamples.MainActivity">

    <TextView
        android:id="@+id/ch03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ch03"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toTopOf="@+id/activity_main" />

    <Button
        android:id="@+id/ch03_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toBottomOf="@id/ch03"
        android:text="ch03_2"/>

    <Button
        android:id="@+id/ch03_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/ch03_2"
        app:layout_constraintTop_toBottomOf="@id/ch03"
        android:text="ch03_6"/>

    <Button
        android:id="@+id/ch03_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/ch03_6"
        app:layout_constraintTop_toBottomOf="@id/ch03"
        android:text="ch03_7"/>

    <Button
        android:id="@+id/ch03_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/ch03_7"
        app:layout_constraintTop_toBottomOf="@id/ch03"
        android:text="ch03_8"/>

    <TextView
        android:id="@+id/ch04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ch04"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toBottomOf="@+id/ch03_8" />

    <Button
        android:id="@+id/ch04_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ch04_2"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toBottomOf="@id/ch04"/>

</android.support.constraint.ConstraintLayout>
